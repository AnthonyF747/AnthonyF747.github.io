@model Project5.Models.Tenant

@{
    ViewBag.Title = "TenantView";
}

<body id="tendiv">
    <div class="container" >
        <div class="row" id="hdpart">
            <h1 id="tenhead">Apartment Maintenance Services</h1>

            <h2 id="tensub">Tenant Request Form</h2>
        </div>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <div class="row" id="frtinlineblk">
                <div class="form-group">
                    <div class="col-md-4">
                        @Html.LabelFor(x => x.FirstName)
                        @Html.TextBoxFor(x => x.FirstName)
                    </div>
                    <div class="col-md-4">
                        @Html.LabelFor(x => x.LastName)
                        @Html.TextBoxFor(x => x.LastName)
                    </div>
                    <div class="col-md-4">
                        @Html.LabelFor(x => x.PhoneNumber)
                        @Html.TextBoxFor(x => x.PhoneNumber)
                    </div>
                </div>
            </div>
            <div class="row" id="secinlineblk">
                <div class="form-group">
                    <div class="col-md-8">
                        @Html.LabelFor(x => x.ApartmentName)
                        @Html.TextBoxFor(x => x.ApartmentName, new { @class = "form-control", style="width: 500px" })
                    </div>
                    <div class="col-md-4">
                        @Html.LabelFor(x => x.ApartmentNumber)
                        @Html.TextBoxFor(x => x.ApartmentNumber)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    @Html.LabelFor(x => x.Description, new { style = "color: black" })
                    <div class="form-group" id="txtblk">
                        @Html.TextAreaFor(x => x.Description, htmlAttributes: new { style="width: 600px; height: 300px;", placeholder="Explanation" +
                        " of request, maintenance required, or complaint. Please be specific."})
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4" id="btnten">
                    <input type="submit" class="btn btn-primary btn-lg" value="Submit Request" />
                </div>
                <div class="col-md-4" id="ckbx">
                    @Html.CheckBoxFor(x => x.IsHome, new { style = "width: 20px; height: 20px;" })
                </div>
                <div class="col-md-4">
                    <p id="tenp">
                        Check the box to give permission for the landlord or representative to enter your unit to perform the
                        requested maintenance. We will call first.
                    </p>
                </div>
            </div>
        }
    </div>

</body>




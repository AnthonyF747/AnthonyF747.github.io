@model IEnumerable<AuctionHouse.Models.Buyer>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BuyerFullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BuyerPhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BuyerEmailAddress)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BuyerFullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BuyerPhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BuyerEmailAddress)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.BuyerID })
        </td>
    </tr>
}

</table>

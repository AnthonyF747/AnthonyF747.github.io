@model IEnumerable<AuctionHouse.Models.Bid>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Buyer.BuyerFullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item.ItemName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BidAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BidTimeStamp)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Buyer.BuyerFullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item.ItemName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BidAmount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BidTimeStamp)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BidID }) |
            @Html.ActionLink("Details", "Details", new { id=item.BidID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BidID })
        </td>
    </tr>
}

</table>

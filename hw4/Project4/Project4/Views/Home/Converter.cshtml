
@{
    ViewBag.Title = "Converter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Convert Miles to Metric</h2>

<div class="container-fluid">
    <div class="row">
        <form action="/Home/Converter" method="post">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="MilesToConvert">Miles:</label>
                    <input class="form-control" id="MilesToConvert" type="number">
                </div>
            </div>
            <div class="col-md-6">
                <h3>Select a unit</h3>
                <hr />
                <div class="radio">
                    <label><input type="radio" name="units" checked><strong>millimeters</strong></label>
                </div>
                <div class="radio">
                    <label><input type="radio" name="units"><strong>centimeters</strong></label>
                </div>
                <div class="radio">
                    <label><input type="radio" name="units"><strong>meters</strong></label>
                </div>
                <div class="radio">
                    <label><input type="radio" name="units"><strong>kilometers</strong></label>
                </div>
            </div>
            <div align="center">
                <input type="submit" class="btn btn-primary" value="Convert" />
            </div>
        </form>
    </div>
    <h3 style="color: darkred">@ViewBag.Message</h3>
</div>



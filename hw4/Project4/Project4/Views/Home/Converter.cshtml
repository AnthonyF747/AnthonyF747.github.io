
@{
    ViewBag.Title = "Converter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Convert Miles to Metric</h2>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="milestoconvert">Miles:</label>
                <input type="text" class="form-control" id="milestoconvert">
            </div>
            <p>This is outside the group div</p>
        </div>
        <div class="col-md-6">
            <h3>Select a unit</h3>
            <hr />
            <div class="radio">
                <label><input type="radio" name="units" checked>millimeters</label>
            </div>
            <div class="radio">
                <label><input type="radio" name="units">centimeters</label>
            </div>
            <div class="radio">
                <label><input type="radio" name="units">meters</label>
            </div>
            <div class="radio">
                <label><input type="radio" name="units">kilometers</label>
            </div>
            <button type="button" class="btn btn-primary">Convert</button>
        </div>
    </div>
    <p>This is the last div in "container-fluid"</p>
</div>



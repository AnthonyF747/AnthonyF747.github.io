
@{
    ViewBag.Title = "Converter";
}

<h2>Convert Miles to Metric</h2>

<div class="container-fluid">
    <div class="row">
        <form action="" method="post">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="MilesToConvert">Miles:</label>
                    <input type="number" name="MilesToConvert" value="" class="form-control"/>
                </div>
            </div>
            <div class="col-md-6">
                <h3>Select a Unit</h3>
                <hr />
                <div class="radio">
                    <label><input type="radio" name="Units" value="" checked/><strong>millimeters</strong></label>
                </div>
                <div class="radio">
                    <label><input type="radio" name="Units" value="" /><strong>centimeters</strong></label>
                </div>
                <div class="radio">
                    <label><input type="radio" name="Units" value="" /><strong>meters</strong></label>
                </div>
                <div class="radio">
                    <label><input type="radio" name="Units" value="" /><strong>kilometers</strong></label>
                </div>
            </div>
            <div align="center">
                <input type="submit" name="convertBtn" value="Convert" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <h3 style="color: darkred">@ViewBag.Message</h3>
</div>


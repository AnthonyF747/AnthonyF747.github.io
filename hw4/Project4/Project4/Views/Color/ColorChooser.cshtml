
@{
    ViewBag.Title = "ColorChooser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create a New Color</h2>

<p>Please enter color in HTML hexadecimal format: #AABBCC</p>


<div class="container-fluid">
    <div class="col-md-12">
        @using (Html.BeginForm("ColorChooser", "ColorController", FormMethod.Post))
        {
            <div class="form-group">
                @Html.Label("firstcolor", "First Color")
                @Html.TextBox("firstcolor", null, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("secondcolor", "Second Color")
                @Html.TextBox("secondcolor", null, htmlAttributes: new { @class = "form-control" })
            </div>
            @Html.ActionLink("Mix Colors", "ColorChooser", "ColorController", new { @class = "btn btn-primary", type="text" })
        }

        @ViewBag.Message

    </div>
</div>




@{
    ViewBag.Title = "ColorChooser";
}

<h2>Create a New Color</h2>

<p>Please enter color in HTML hexidecimal format #AABBCC</p>

<div class="container-fluid">
    <div class="col-md-6">
        @using (Html.BeginForm("ColorChooser", "Color", FormMethod.Post))
        {
            <div class="form-group">
                @Html.Label("firstColor", "First Color")
                @Html.TextBox("firstColor", null, htmlAttributes: new { @class="form-control"})
            </div>
            <div class="form-group">
                @Html.Label("secondColor", "Second Color")
                @Html.TextBox("secondColor", null, htmlAttributes: new { @class="form-control"})
            </div>
        }
        @Html.ActionLink("Mix Colors", "ColorChooser", "Color", new { @class="btn btn-primary"})
    </div>
    @ViewBag.ColorMessage
</div>


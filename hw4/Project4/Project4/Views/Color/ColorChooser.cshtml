
@{
    ViewBag.Title = "ColorChooser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create a New Color</h2>

<p>Please enter color in HTML hexadecimal format: #AABBCC</p>

<div class="container-fluid">
    <div class="col-md-12">
        <form action="" method="post">
            <div class="form-group">
                <label for="firstcolor">First Color</label>
                <input type="number" class="form-control" id="firstcolor" />
            </div>
            <div class="form-group">
                <label for="secondcolor">Second Color</label>
                <input type="number" class="form-control" id="secondcolor">
            </div>
            <input type="submit" class="btn btn-primary" value="Mix Colors" />
        </form>
    </div>
    <div id="resbox">
    </div>
</div>


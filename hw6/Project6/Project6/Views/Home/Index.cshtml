@model IEnumerable<Project6.Models.Person>

@{
    ViewBag.Title = "Home Page";
}

<div class="row" id="textrow">
    <div class="container-fluid">
        @using (Html.BeginForm("Index", "Home", FormMethod.Get))
        {
            <div class="input-group">
                <span class="input-group-btn">
                    @Html.TextBox("query", null, new { @class="form-control"})
                    <button class="btn btn-primary btn-sm" type="submit" id="formbtn">Submit</button>
                </span>
            </div>
        }
    </div>
</div>
<div class="row">
    <div class="container-fluid">
        @if(ViewBag.show == true)
        {
            if(Model.Count() == 0)
            {
                <h4 id="frmwarning">No person by that name. Please try again.</h4>
            }
            else
            {
                <h3>Client Info</h3>
                <ul class="list-group">
                    @foreach(var p in Model)
                    {
                        <li class="list-group-item">
                            <a>@p.FullName && (@p.PreferredName)</a>
                        </li>
                    }
                </ul>
            }
        }
    </div>

</div>